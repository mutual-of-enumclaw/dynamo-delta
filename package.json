{
    "name": "dynamo-delta",
    "description": "Provides the ability to perform field level updates based on an original and modified object to dynamodb",
    "version": "1.0.0",
    "author": "Mutual of Enumclaw",
    "license": "MIT License",
    "main":"dest/index.js",
    "scripts": {
        "prebuild": "npm run lt",
        "build": "npm run package",
        "postbuild": "mv .serverless/nucleus-reporting-int-interim.zip ./",
        "test": "npx jest",
        "test:coverage": "npm run test -- --coverage",
        "lint": "npx tslint -c tslint.json -p tsconfig.json",
        "lint:fix": "npx tslint -c tslint.json -p tsconfig.json --fix",
        "lt": "npm run lint && npm run test:coverage",
        "package": "npx tsc"
    },
    "dependencies": {
        "@types/node": "^10.12.24",
        "aws-sdk": "^2.437.0"
    },
    "devDependencies": {
        "@types/jest": "^24.0.9",
        "jest": "23.6.0",
        "jest-junit": "^6.2.1",
        "ts-jest": "^23.10.5",
        "ts-loader": "^5.3.3",
        "tslint": "^5.12.1",
        "typescript": "^3.3.3"
    }
}
